.row.justify-content-center.align-items-center.min-vh-100
  .col-12.col-sm-8.col-md-6.col-lg-4
    .card.shadow
      .card-body.p-4
        .text-center.mb-4
          %h2.card-title
            %i.bi.bi-menu-button-wide.me-2
            Ai La Carte
          %p.text-muted Internal Customer Support

        - if @error
          .alert.alert-danger.d-flex.align-items-center
            %i.bi.bi-exclamation-triangle-fill.me-2
            = @error

        %form{action: '/ics/login', method: 'post'}
          .mb-3
            %label.form-label{for: 'username'}
              %i.bi.bi-person.me-1
              Username
            %input.form-control{type: 'text', name: 'username', id: 'username', required: true, autofocus: true}

          .mb-3
            %label.form-label{for: 'password'}
              %i.bi.bi-lock.me-1
              Password
            %input.form-control{type: 'password', name: 'password', id: 'password', required: true}

          .d-grid
            %button.btn.btn-primary.btn-lg{type: 'submit'}
              %i.bi.bi-box-arrow-in-right.me-2
              Sign In
